<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F0F6"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/asdasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Listo? Juegaaa!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>
    <!-- Categoría -->
    <TextView
        android:id="@+id/txtTituloCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Knowledge"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Contador de tiempo -->
    <TextView
        android:id="@+id/txtTiempoRestante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textSize="16sp"
        android:background="#C8E6C9"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/ic_reloj"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />


    <!-- Número de pregunta -->
    <TextView
        android:id="@+id/txtPreguntaNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1/3"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Pregunta -->
    <TextView
        android:id="@+id/txtPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aquí va la pregunta"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <!-- Opciones de respuesta -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radioTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True" />

        <RadioButton
            android:id="@+id/radioFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False" />
    </RadioGroup>

    <!-- Botón siguiente -->
    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:backgroundTint="#1A237E"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>
